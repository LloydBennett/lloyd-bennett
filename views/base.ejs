<% var page = pageType %>

<%- include('./partials/head', { page: page } ) -%>

<body <% if( page !== 'project' ) { %>class="bg--grit-50"<%} %> >
  <main data-page="<%- page %>" class="main <%- page %>">
    <%- include('./partials/navigation-bar') -%>
    <%- include('./partials/navigation-menu') -%>

    <div class="section--l-top">
      <% switch(page) {
        case 'project' : %>
          <%- include('./pages/project') %>
          <%  break; %>
        <% case 'about' : %>
          <%- include('./pages/about') -%>
          <% break; %>
        <% default : %>
        <%- include('./pages/home') -%>
      <% } %>
    </div>
  </main>

  <%- include('./partials/footer', { footer: footer.data }) -%>
</body>



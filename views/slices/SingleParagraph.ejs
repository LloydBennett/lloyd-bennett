<% 
  var para = slice.items
  let marginPos = slice.primary.margin.toLowerCase()
  let cssClass
  console.log(marginPos)

  switch(marginPos) {
    case 'bottom':
      cssClass = 'section--l-m-bottom'
      break
    case 'top':
      cssClass = 'section--l-m-top'
      break
    case 'both':
      cssClass = 'section--l-m-both'
      break
    default:
      cssClass = 'section--l-m-bottom'
      break
  }
%>
<section class="<%- cssClass %>">
  <div class="container grid">
    <div class="offset-content">
      
      <% if(slice.primary.paragraph_title !== null) { %>
        <h3 class="type--m type--m-margin">
          <%- slice.primary.paragraph_title %>
        </h3>
      <% } %>

      <% para.forEach((block) => { %>
        <% if(block.paragraph_text !== null) { %>
          <p class="type--body type--grit-400">
            <%- block.paragraph_text %>
          </p>
        <% } %>
      <% }) %>
    </div>
  </div>
</section>
